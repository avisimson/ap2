@model WEB.Models.ConfigModel
@{
	ViewBag.Title = "Settings";
}

<h2>Settings</h2>

<table class="table table-striped table-dark">
	<tbody>
		<tr>
			<th>@Html.DisplayNameFor(model => model.OutputDirectory)</th>
			<td>@Html.DisplayName(Model.OutputDirectory)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.LogName)</th>
			<td>@Html.DisplayName(Model.LogName)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.SourceName)</th>
			<td>@Html.DisplayName(Model.SourceName)</td>
		</tr>
		<tr>
			<th>@Html.DisplayNameFor(model => model.ThumbnailSize)</th>
			<td>
				@{
					if (Model.ThumbnailSize > 0)
					{
						@Html.DisplayName(Model.ThumbnailSize.ToString())
					}
					else
					{
						<span style="font-weight: normal; font-size: large">N / A</span>
					}
				}
			</td>
		</tr>
	</tbody>
</table>

<h3>Directory Handlers</h3>
<table class="table table-striped table-dark">
	<tbody>
		@foreach (var handler in Model.Handlers)
		{
			<tr>
				<td>@Html.DisplayName(handler)</td>
				<td>
					<input type="button" class="btn btn-danger btn-sm" value="Delete" data-toggle="modal" data-target="#deleteModal" data-handler="@handler" />
				</td>
			</tr>
		}

	</tbody>

</table>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="deleteModalLabel">Are you sure?</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Are you sure you want to delete this handler?
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<input type="button" class="btn btn-primary" handler="" value="OK" onclick="" />

			</div>
		</div>
	</div>
</div>


<script>

    $('#deleteModal').on('shown.bs.modal',
        function() {
            $('#myInput').trigger('focus');
        });

    $('#deleteModal').on('show.bs.modal',
        function(event) {
            var button = $(event.relatedTarget);
            var handler = button.data('handler');
            var modal = $(this);
            modal.find('.modal-footer input').attr('handler', handler);


            var url = '@Url.Action("Delete", "Home", new {handlerToRemove = "__param__"})';
            var replaced = url.replace('__param__', handler);


            modal.find('.modal-footer input').click(function() { location.href = replaced });
        });

</script>